/* pages/kabao/kabao.wxss */

page {
  display: block;
  min-height: 100%;
  background-color: #f5f5f5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0;
}

.nav {
  width: 100%;
  height: 440rpx;
  border: 1rpx solid #ddd;
}

.nav image {
  display: block;
  width: 90.9%;
  height: 380rpx;
  margin: 30rpx auto;
  /* position: relative; */
}

.click {
  font-size: 34rpx;
  font-weight: 500;
  width: 100%;
  height: 96rpx;
  color: #fff;
  background-color: #2ab650;
  line-height: 96rpx;
  text-align: center;
  border-radius: 0;
  position: absolute;
  bottom: 0;
  left: 0;
}

.info_list {
  width: 100%;
  background-color: #fff;
}

.weui_cell {
  margin: 0 auto;
  font-size: 32rpx;
  font-weight: 500;
  width: 84%;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  border-bottom: 2rpx solid #f1e7e7;
  position: relative;
}

.weui_cell_bd_p, .weui_cell_bd_q {
  display: inline-block;
}

