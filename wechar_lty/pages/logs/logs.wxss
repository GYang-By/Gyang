/*me  */

page {
  background-color: #f5f5f5;
  display: block;
  max-height: 100%;
}

.container {
  display: block;
  background-color: #fff;
  position: relative;
  padding: 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 328rpx;
}

.img2 {
  width: 106%;
  height: 230rpx;
  margin-top: -21rpx;
  display: block;
}

.userinfo-avatar2 {
  display: block;
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  position: absolute;
  top: 78rpx;
  left: 50%;
  margin-left: -85rpx;
}

.name2 {
  padding-top: 60rpx;
  max-width: 360rpx;
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/*bot  */

.info_list {
  margin-top: 118rpx;
}

.weui_cell {
  height: 27rpx;
  position: relative;
  display: flex;
  padding: 30rpx;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
}

.weui_cell_hd {
  display: inline-block;
  width: 40rpx;
  margin-right: 10rpx;
}

.weui_cell_hd image {
  width: 100%;
  height: 40rpx;
  vertical-align: -4rpx;
}

.weui_cell_td .gt {
  width: 20rpx;
  height: 40rpx;
  vertical-align: -4rpx;
  position: absolute;
  top: 25rpx;
  right: 30rpx;
}

.weui_cell_bd {
  display: inline-block;
}

.weui_cell_bd_p {
  font-size: 30rpx;
  color: #333;
}

