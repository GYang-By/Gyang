/**index.wxss**/

/*图片  */

.container {
  padding: 0;
  width: 100%;
}

.image {
  height: 360rpx;
  width: 100%;
}

image {
  display: block;
  width: 100%;
  height: 360rpx;
}

/*手机输入  */

.userphone {
  margin-top: 36rpx;
}

.userphone input {
  height: 100rpx;
  width: 468rpx;
  font-size: 30rpx;
  color: #333;
  padding-left: 66rpx;
  position: relative;
  padding-right: 46rpx;
}

.userphone image {
  width: 46rpx;
  height: 46rpx;
  position: absolute;
  top: 10px;
  left: 0px;
}

.userphone .close {
  position: absolute;
  width: 46rpx;
  height: 46rpx;
  top: 20rpx;
  left: 528rpx;
}

.userphone, .yanzhengMa {
  height: 100rpx;
  width: 580rpx;
  border-bottom: 1rpx solid #ddd;
  margin-left: 140rpx;
  margin-right: 140rpx;
  line-height: 100rpx;
  /* position: relative; */
}

.yanzhengMa input {
   position: relative; 
  height: 100rpx;
  width: 364rpx;
  font-size: 30rpx;
  color: #999;
  padding-left: 66rpx;
  padding-right: 150rpx;
}

.yanzhengMa image {
  width: 46rpx;
  height: 46rpx;
  position: absolute;
  top: 12px;
  left: 0px;
}

.yanzhengMa button {
  border: 1rpx solid #2ab650;
  position: absolute;
  top: 25rpx;
  right: 0rpx;
  width: 148rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center; 
  background-color: transparent;
  font-family: 'Arial Normal', 'Arial';
  font-weight: 400;
  font-style: normal;
  font-size: 23rpx;
  color: #2ab650;
  border-radius: 12rpx;
  padding: 0;
}

.button {
  margin-top: 60px;
  width: 580rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2ab650;
  font-family: 'Arial Normal', 'Arial';
  font-weight: 400;
  font-style: normal;
  font-size: 34rpx;
  text-decoration: none;
  color: #fff;
  text-align: center;
  border-radius: 40rpx;
}
.gps_city{
  margin-top: 30rpx;
  font-size: 34rpx;
  color: #E31D1A;
}


/* 登录flag样式自定义，覆盖默认 */

button[disabled][type="default"], wx-button[disabled]:not([type]).button {
  color: rgba(255, 255, 255, 0.6);
  background-color:#2ab650;
}